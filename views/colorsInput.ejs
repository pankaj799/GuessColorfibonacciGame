<%- include("includes/head.ejs") %>
<h1 class="text-center font-weight-bold" style="font-size: 2rem; color: #c1f7ff"><%= viewTitle %></h1>
<div class="col-4">
    <form action="/colorsSelected" method="post">
        <div class="form-group">
            <label for="color">color Name:</label>
            <input type="text" class="form-control" id="color" name="color">
        </div>
        <div class="form-group">

            <label for="val">Value of Color:</label>
            <input type="number" class="form-control" id="val" name="val">
            <small>assign value between 1 to 10</small>
        </div>
        <div class="form-group">

            <label for="lev">Level:</label>
            <input type="number" class="form-control" id="lev" name="lev">
            <small>assign value between 1 to 6</small>
        </div>
        <button type="submit" class="btn btn-success">Submit</button>
    </form>
    <a class="btn btn-primary" href="/">Back</a>
</div>
<%- include("includes/end.ejs") %>
